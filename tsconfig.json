{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "@icon/*": ["./src/webview/icons/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "dist"]
}
